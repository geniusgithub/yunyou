<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/device_bg" >

    <RelativeLayout 
        android:id="@+id/title_bar"
        android:orientation="vertical"
        android:background="@drawable/title_bar" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <Button android:id="@+id/btn_back" android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:paddingLeft="5dp" android:textSize="18.0sp" android:textColor="#ffffff"  android:background="@drawable/selector_btn_back" android:layout_width="wrap_content" android:layout_height="wrap_content"   android:text="@string/btn_back" />
        <TextView android:layout_centerInParent="true" android:textSize="20.0sp" android:textColor="@color/white"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setting_title_querybalance" />
    </RelativeLayout>

    <LinearLayout
         android:id="@+id/linearlayout"
         android:layout_below="@id/title_bar"
         android:layout_width="fill_parent" 
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:orientation="vertical"
         android:gravity="center_horizontal">
        
            <LinearLayout 
            android:layout_below="@id/rl_layout1"
            style="@style/leba_bg_layout">                  
      
            <LinearLayout 
                style="@style/leba_bg_top_layout" >
                <TextView style="@style/text_style1" android:textColor="#666666" android:text="@string/setting_querybalance_text1" android:textSize="20sp"  />
                <TextView android:id="@+id/tv_account"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#0097fd" android:textSize="20sp"  android:text="10391588"  android:layout_marginLeft="12.0dip" android:layout_weight="1.0" />
            </LinearLayout>
            
            <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />

             <LinearLayout 
             	 style="@style/leba_bg_mid_layout">          
                <TextView style="@style/text_style1" android:textColor="#666666" android:text="@string/setting_querybalance_text2" android:textSize="20sp"  />
                <TextView android:id="@+id/tv_balance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#0097fd" android:textSize="20sp"  android:text="250元"  android:layout_marginLeft="12.0dip" android:layout_weight="1.0" />
             </LinearLayout>
             
             <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
                           
             <LinearLayout 
             	 style="@style/leba_bg_mid_layout">
                <TextView style="@style/text_style1" android:textColor="#666666" android:text="@string/setting_querybalance_text3" android:textSize="20sp" />
                <TextView android:id="@+id/tv_vip_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#0097fd" android:textSize="20sp"  android:text="全年套餐 - 2012年12月01日"  android:maxLines="2"  android:layout_marginLeft="12.0dip" android:layout_weight="1.0" />
             </LinearLayout>
            
             <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
                  
   
            <LinearLayout 
                style="@style/leba_bg_bottom_layout">
                <TextView style="@style/text_style1" android:textColor="#666666" android:text="@string/setting_querybalance_text4" android:textSize="20sp"   />
                <TextView android:id="@+id/tv_vip_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#0097fd" android:textSize="20sp"  android:text="尚未开通"  android:layout_marginLeft="12.0dip" android:layout_weight="1.0" />
            </LinearLayout>                             
        </LinearLayout>
        
            
         <LinearLayout 
                android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:layout_marginTop="15dp"
    			android:layout_marginLeft="20dp"
    			android:layout_marginRight="20dp">
	
			<Button
            android:id="@+id/btn_rechargenow"          
            android:background="@drawable/selector_btn_ok" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="@string/setting_btn_recharge" 
            android:textSize="18sp"
            android:textColor="#eeeeee"/>
         
        	<Button
            android:id="@+id/btn_rechargerecord"               
            android:background="@drawable/selector_btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="@string/setting_btn_recharge_record"
            android:textSize="18sp"
            android:textColor="#444444" />
	 
          </LinearLayout> 
            
            
          <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ff3c00"
            android:textSize="18.0sp"
   			android:text="最新优惠(暂无)"
   			android:layout_marginTop="20dp"/>
         
    </LinearLayout>
     
 
    
</RelativeLayout>
