<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginpage"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/common_bg" >
    


    <RelativeLayout 
        android:id="@+id/title_bar"
        android:orientation="vertical"
        android:background="@drawable/title_bar" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <Button android:id="@+id/btn_back" android:layout_centerVertical="true" android:layout_marginLeft="10dp" android:paddingLeft="5dp" android:textSize="18.0sp" android:textColor="#ffffff"  android:background="@drawable/selector_btn_back" android:layout_width="wrap_content" android:layout_height="wrap_content"   android:text="@string/btn_back" />
        <TextView android:id="@+id/tv_title" android:layout_centerInParent="true" android:textSize="20.0sp" android:textColor="@color/white"  android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    

    <LinearLayout    
      android:layout_below="@id/title_bar"
	  android:orientation="vertical" 
	  android:layout_width="fill_parent" 
	  android:layout_height="fill_parent">
               
	    <FrameLayout 
	        android:orientation="vertical" 
	        android:background="@drawable/shape_bg" 
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="10.0dip" 
	        android:layout_marginTop="20.0dip" 
	        android:layout_marginRight="10.0dip">       
	      
	        <LinearLayout android:visibility="gone" android:id="@+id/ll_emailview" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50.0dip" >
	            <TextView android:textSize="18.0sp" android:textColor="#6d6d6d"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/setting_text_email"/>
	            <EditText android:textSize="16.0sp" android:textColor="#ff545454" android:id="@+id/et_email" android:background="@android:color/white" android:paddingLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="15.0dip" android:maxLength="20" />
	        </LinearLayout>
	        
	        <LinearLayout android:visibility="gone" android:id="@+id/ll_nameview" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50.0dip" >
	            <TextView android:textSize="18.0sp" android:textColor="#6d6d6d"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"  android:text="@string/setting_text_name"/>
	            <EditText android:textSize="16.0sp" android:textColor="#ff545454" android:id="@+id/et_name" android:background="@android:color/white" android:paddingLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="15.0dip" android:maxLength="20" />
	        </LinearLayout>
	        
	        <LinearLayout android:visibility="gone" android:id="@+id/ll_phoneview" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50.0dip" >
	            <TextView android:textSize="18.0sp" android:textColor="#6d6d6d"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"  android:text="@string/setting_text_phone"/>
	            <EditText android:textSize="16.0sp" android:textColor="#ff545454" android:id="@+id/et_phone" android:background="@android:color/white" android:paddingLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="15.0dip" android:maxLength="20" />
	        </LinearLayout>
	        
	            
	        <LinearLayout 
	        android:id="@+id/ll_birthdayview"
	        android:visibility="gone"
	        android:orientation="vertical" 
	        android:background="@drawable/shape_bg" 
	        android:layout_width="fill_parent" 
	        android:layout_height="wrap_content">
	            
	            <LinearLayout  android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50.0dip" >
	            	<TextView android:textSize="18.0sp" android:textColor="#6d6d6d"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"  android:text="@string/setting_text_year"/>
	            	<EditText android:id="@+id/et_year" android:inputType="number" android:textSize="16.0sp" android:textColor="#ff545454" android:background="@android:color/white" android:paddingLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="15.0dip" android:maxLength="4" />
	       		</LinearLayout>
	       		
				<View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
	                                 
	            <LinearLayout  android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50.0dip" >
	            	<TextView android:textSize="18.0sp" android:textColor="#6d6d6d"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"  android:text="@string/setting_text_month"/>
	            	<EditText android:id="@+id/et_month" android:inputType="number" android:textSize="16.0sp" android:textColor="#ff545454" android:background="@android:color/white" android:paddingLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="15.0dip" android:maxLength="2" />
	       		</LinearLayout>
	       		
	            <View android:background="@color/shape_line" android:layout_width="fill_parent" android:layout_height="1.0px" />
	                                 
	            <LinearLayout  android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="50.0dip" >
	            	<TextView android:textSize="18.0sp" android:textColor="#6d6d6d"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"  android:text="@string/setting_text_day"/>
	            	<EditText android:id="@+id/et_day" android:inputType="number" android:textSize="16.0sp" android:textColor="#ff545454" android:background="@android:color/white" android:paddingLeft="10.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:layout_marginRight="15.0dip" android:maxLength="2" />
	       		</LinearLayout>
	            
	        </LinearLayout>      
	        
	    </FrameLayout>
	    
	     <Button
	     android:id="@+id/btn_save"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="10.0dip" 
	     android:layout_marginTop="10.0dip" 
	     android:layout_marginRight="10.0dip"   
	     android:background="@drawable/selector_btn_white"   
	     android:text="@string/btn_save"
	     style="@style/text_whitebtn_style" />

    </LinearLayout> 
  
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="5dp"
      android:textColor="#607a84"
      android:text="@string/bottom_text" />
    

</RelativeLayout>
