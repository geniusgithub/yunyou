<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="dialog" parent="@android:style/Theme.Dialog">
	    <item name="android:windowIsFloating">true</item>     <!-- 设置未浮动窗口 -->
		<item name="android:windowFrame">@null</item>         <!-- 设置无边框 -->     
		<item name="android:windowNoTitle">true</item>        <!-- 设置无标题 -->
		<item name="android:windowBackground">@color/sc_transparent_background</item>  <!-- 设置完全透明 -->
		<item name="android:backgroundDimEnabled">true</item>                          <!-- 设置屏幕变暗 -->   
	</style>

    <style name="common_dialog_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="common_dialog_message_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="common_dialog_positive_btn_style" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_btn_cancel</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="common_dialog_negative_btn_style" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_btn_cancel</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:gravity">center</item>
    </style>

        				

    <style name="tab_item_text_style">
        <item name="android:textSize">12.0dip</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:ellipsize">marquee</item>       
        <item name="android:singleLine">true</item>
    </style>
    
        
